# Application Settings
APP_NAME=ChandraHoro
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_V1_PREFIX=/api/v1
# CORS origins (comma-separated for environment variable, or use JSON array)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,https://valuestream.in
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Server
HOST=0.0.0.0
PORT=8000

# Database Configuration (MySQL)
DATABASE_URL=mysql+aiomysql://chandrahoro:chandrahoro@localhost:3306/chandrahoro
SQL_ECHO=false
# Set to true for Azure MySQL SSL requirement
AZURE_MYSQL_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Session Management
SESSION_EXPIRY_HOURS=24

# Swiss Ephemeris
EPHEMERIS_PATH=./ephemeris_data

# Location Services
GEONAMES_USERNAME=your_geonames_username
# Optional: Google Maps API key for enhanced geocoding
GOOGLE_MAPS_API_KEY=
# Optional: Mapbox API key for enhanced geocoding
MAPBOX_API_KEY=
# Location cache TTL in hours
LOCATION_CACHE_TTL_HOURS=24

# AI Services (Optional - Phase 2)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AI_PROVIDER=openai
AI_MODEL=gpt-4
AI_DEMO_MODE=false

# LLM Vault Configuration (for storing user API keys)
LLM_VAULT_KEY=your-vault-encryption-key-here
LLM_VAULT_DIR=/tmp/llm_vault

# Rate Limiting
RATE_LIMIT_CHARTS_PER_HOUR=10
RATE_LIMIT_AI_PER_DAY=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7